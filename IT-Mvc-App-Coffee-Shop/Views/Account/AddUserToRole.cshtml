@model IT_Mvc_App_Coffee_Shop.Models.AddUserToRole

@{
    ViewBag.Title = "Add User To Role";
}


<div>
<h2 style="margin: 5% 1%; font-size: 50px; margin-left: 37%">Add User To Role</h2>
    <div class="row">
        <div class="card role-card">
            <div>
            @using (Html.BeginForm("AddUserToRole", "Account"))
            {
                <div class="form-group">
                    @Html.Label("User Email")
                    @Html.DropDownListFor(m => m.SelectedEmail, new SelectList(Model.Emails), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Select Role")
                    @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-default btn-dark">Add</button>
            }
            </div>
        </div>
    </div>
</div>

